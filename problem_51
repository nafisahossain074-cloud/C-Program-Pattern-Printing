#include <stdio.h>

int main() {
    int rows, i, j, num = 1, total = 0;

    printf("Enter number of rows: ");
    scanf("%d", &rows);

    for(i = 1; i <= rows; i++)
        total += i;

    for(i = rows; i >= 1; i--) {
        for(j = 1; j <= rows - i; j++)
            printf(" ");

        for(j = 1; j <= i; j++) {
            printf("%d ", total);
            total--;
        }
        printf("\n");
    }

    return 0;
}
