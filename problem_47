#include <stdio.h>

int main() {
    int rows, i, j, space;

    printf("Enter number of rows: ");
    scanf("%d", &rows);

    // Upper Pyramid
    for(i = 1; i <= rows; i++) {

        // Print leading spaces
        for(space = 1; space <= rows - i; space++)
            printf(" ");

        // Print stars & hollow spaces
        for(j = 1; j <= 2*i - 1; j++) {
            if(j == 1 || j == 2*i - 1)
                printf("*");
            else
                printf(" ");
        }

        printf("\n");
    }

    // Lower Inverted Pyramid
    for(i = rows-1; i >= 1; i--) {

        // Print leading spaces
        for(space = 1; space <= rows - i; space++)
            printf(" ");

        // Print stars & hollow spaces
        for(j = 1; j <= 2*i - 1; j++) {
            if(j == 1 || j == 2*i - 1)
                printf("*");
            else
                printf(" ");
        }

        printf("\n");
    }

    return 0;
}
